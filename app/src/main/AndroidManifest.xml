<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.michelle.driverbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">

        <activity android:name="com.example.michelle.driverbuddy.Logging" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.michelle.driverbuddy.DriverMenu" />

        <activity
            android:name="com.example.michelle.driverbuddy.DriverProfileEditActivity"
            android:parentActivityName="com.example.michelle.driverbuddy.DriverMenu"
            android:label="@string/edit_profile"/>

        <activity
            android:name="com.example.michelle.driverbuddy.FineHistory"
            android:parentActivityName="com.example.michelle.driverbuddy.DriverMenu"
            android:label="@string/fine_history_1"/>

        <activity android:name="com.example.michelle.driverbuddy.Payment"
            android:label="Payment Details"/>

        <activity android:name="com.example.michelle.driverbuddy.PoliceOfficerMenu" />

        <activity
            android:name="com.example.michelle.driverbuddy.WriteFine"
            android:label="@string/issue_fine_1" />

        <activity
            android:name="com.example.michelle.driverbuddy.CheckLicense"
            android:label="@string/check_license" />

        <activity
            android:name="com.example.michelle.driverbuddy.RespondDistress"
            android:label="@string/distress_respond" />

        <activity
            android:name="com.example.michelle.driverbuddy.TrackDistressDriver"
            android:label="@string/track_driver" />

        <activity
            android:name="com.example.michelle.driverbuddy.EditFineOfficer"
            android:label="@string/edit_fine" />

        <activity
            android:name="com.example.michelle.driverbuddy.FineHistoryOfficer"
            android:label="@string/fine_history_1" />

        <activity
            android:name="com.example.michelle.driverbuddy.OfficerSettings"
            android:label="Edit Profile" />


        <activity android:name="com.example.michelle.driverbuddy.UpdateFine"
            android:label="@string/update"/>

        <activity android:name="com.example.michelle.driverbuddy.insurance_profile" />

        <activity
            android:name="com.example.michelle.driverbuddy.insurance_track_driver"
            android:label="Track Driver" />

        <activity
            android:name="com.example.michelle.driverbuddy.insurance_popwindow"
            android:theme="@style/AppTheme.CustomTheme" />

        <activity android:name="com.example.michelle.driverbuddy.insurance_edit_profile"
            android:label="@string/edit_profile"/>

        <activity
            android:name="com.example.michelle.driverbuddy.User_registration"
            android:label="User Registration" />
        <activity
            android:name="com.example.michelle.driverbuddy.insurance_popwindow"
            android:theme="@style/AppTheme.CustomTheme"
            tools:ignore="DuplicateActivity" />

        <activity
            android:name="com.example.michelle.driverbuddy.SettingUpProfileActivity"
            android:parentActivityName="com.example.michelle.driverbuddy.User_registration"
            android:label="User Setting Up Profile"/>
    </application>

</manifest>